<!DOCTYPE html>
<html>
  <head>
    <title>Photogram Industrial</title>
       <%= render partial: "shared/cdn_assets" %>

<meta charset="utf-8">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <%= render partial: "shared/navbar" %>
     <div class="container mt-3">
       <% if notice.present? %>
        <%= render partial: "shared/message", locals: { message: notice, css_class: "success" } %>
      <% end %>
      
      <% if alert.present? %>
        <%= render partial: "shared/message", locals: { message: alert, css_class: "danger" } %>
      <% end %>
    <%= yield %>
    </div>
  </body>
</html>
